<advice xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../main/xsd/bddSchema.xsd" id="aspect id">
    <given>
        <service intercepted="invoke">com.catlin.foo:bar</service>
        <when id="servicewhen" condition="foo == 2"/>
    </given>
    <when id="input 1" condition="input == 1">
        <then>
            <return><![CDATA[<IDataXMLCoder version="1.0">
                <record javaclass="com.wm.data.ISMemDataImpl">
                    <value name="apple">alpha</value>
                </record>
            </IDataXMLCoder>]]>
            </return>
        </then>
    </when>
    <when id="input 2" condition="input == 2">
        <then>
            <return><![CDATA[<IDataXMLCoder version="1.0">
            <record javaclass="com.wm.data.ISMemDataImpl">
                <value name="apple">beta</value>
            </record>
        </IDataXMLCoder>]]>
        </return>
        </then>
    </when>
    <when id="default">
        <then>
            <return><![CDATA[<IDataXMLCoder version="1.0">
            <record javaclass="com.wm.data.ISMemDataImpl">
                <value name="apple">gamma</value>
            </record>
        </IDataXMLCoder>]]>
        </return>
        </then>
    </when>
</advice>
